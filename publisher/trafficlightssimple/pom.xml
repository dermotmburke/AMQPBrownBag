<project>
    <modelVersion>4.0.0</modelVersion>
    <name>Traffic Light Publisher</name>
    <groupId>com.lloyds.brownbag.amqp.trafficlights</groupId>
    <artifactId>trafficlightpublisher</artifactId>
    <version>1.0.0</version>
    <dependencies>
        <dependency>
            <groupId>com.rabbitmq</groupId>
            <artifactId>amqp-client</artifactId>
            <version>2.8.4</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>